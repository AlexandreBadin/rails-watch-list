<!-- MY BANNER -->
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path 'watch_list-banner.jpg' %>');">
  <div class="container">
    <h1>Hey, Welcome on <strong>Movies List</strong>!</h1>
    <p>Add a list of your favorites movies</p>
    <%= link_to 'Create a new list', new_list_path, class: 'btn btn-primary' %>
  </div>
</div>

<!-- MY CARDS LIST -->
<div class="container">
  <div class="title">
    <h2>Movies Categories Cards</h2>
  </div>
    <!-- MY CARD CATEGORY -->
    <div class="cards-list">
      <% @lists.each_with_index do |list, index| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/1600x900/?<%= list.name.gsub(' ', '') %>)">
          <%= link_to "#{list.name.upcase} (#{list.movies.count})", list_path(list) %>
          <%= link_to list_path(list.id), method: :delete, data: { confirm: "You will destroy #{list.name.upcase} list! Are you sure about that?" } do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        </div>
      <% end %>
    </div>
</div>

