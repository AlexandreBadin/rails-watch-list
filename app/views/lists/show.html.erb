<div class="container">
  <h1>Movies in '<%= @list.name %>' :</h1>
  <% @list.bookmarks.each do |bookmark| %>
    <h2><%= bookmark.movie.title %> - <%= bookmark.movie.rating %>/10</h2>
    <p><%= bookmark.comment %></p>
    <%= link_to 'Delete', bookmark_path(bookmark), method: :delete, data: { confirm: 'are you sure?' }, class: 'btn btn-warning' %>
  <% end %>
  <%= link_to 'Add a bookmark', new_list_bookmark_path(@list), class: 'btn btn-primary' %>
  <%= link_to 'Back to lists', lists_path, class: 'btn btn-primary' %>
</div>
